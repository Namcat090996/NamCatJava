<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="vn.com.stanford.je0824.bookstore.entities">
<class name="Sach" table="Sach">
    <id name="maSach" type="string">
        <column name="MaSach"/>
    </id>
    <property name="tenSach" type="string" column="TenSach" length="150"/>
    <property name="moTa" type="string" column="MoTa" length="255"/>
    <property name="anhSach" type="string" column="AnhSach" length="255"/>
    <property name="tacGia" type="string" column="TacGia" length="255"/>
    <property name="giaSach" type="double" column="GiaSach"/>
    <property name="ngayTao" type="date" column="NgayTao"/>
    <property name="ngayCapNhat" type="date" column="NgayCapNhat"/>
    <property name="daDuyet" type="int" column="DaDuyet" not-null="false"/>
    <property name="maChuDe" type="string" column="MaChuDe"/>
</class>
</hibernate-mapping>